<% include ./partials/header %>

<div class="container mt-4">
    <form action="/blog/<%=blog._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <h4>Enter Title</h4>
            <input type="text" name="title" class="form-control" placeholder="Enter Title" value="<%=blog.title%>">
            <small class="form-text text-muted">A good title is all it needs.</small>
        </div>
        <div class="form-group">
            <h4>Enter Image Url</h4>
            <input type="text" name="url" class="form-control" placeholder="Url Here" value="<%=blog.url%>">
        </div>
        <div class="form-group">
            <h4><label>Description</label></h4>
            <textarea rows="4" name="body" placeholder="Blog post goes here"
                class="form-control"><%=blog.body%></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>

</div>

<% include ./partials/footer %>